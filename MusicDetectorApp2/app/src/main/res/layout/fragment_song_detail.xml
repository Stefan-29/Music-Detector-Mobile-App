<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding ="@dimen/app_padding"
    tools:context=".SongDetailFragment">

    <TextView
        android:id="@+id/song_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/song_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/song_artist_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_artist"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/song_album_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_album"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/song_duration_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_duration"
        android:textSize="14sp" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete" />

</LinearLayout>
